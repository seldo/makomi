{
  "description": "Users",
  "datasource": "maindb",
  "queries": {
    "get user by id": {
      "type": "read",
      "query": "select * from users where id = :id",
      "params": {
        ":id": {
          "validation": "integer"
        }
      }
    },
    "list all users": {
      "type": "read",
      "query": "select * from users limit :pagesize,:offset",
      "params": {
        ":pagesize": {
          "default": "10",
          "validation": "page_size"
        },
        ":pagenumber": {
          "default": "1",
          "validation": "page_number"
        },
        ":offset": {
          "generate": {
            "generator": "_ADAPTER:generate_page_offset",
            "params": {
              "pagenumber": ":pagenumber",
              "pagesize": ":pagesize"
            }
          }
        }
      }
    },
    "create user": {
      "type": "create",
      "query": "insert into users (id,name,email) values (:id,:name,:email)",
      "params": {
        ":id": {
          "generate": "_ADAPTER:unique_id"
        },
        ":name": {
          "validation": "_VALIDATION:name"
        },
        ":email": {
          "validation": "_VALIDATION:email"
        }
      }
    }
  },
  "validations": {
    "name": {
      "rules": [
        { "rule": "safe_string" },
        { "rule": "max_length", "params": {"length": 30} },
        { "rule": "min_length", "params": {"length": 5} }
      ]
    },
    "email": {
      "rules": [
        { "rule": "email_loose" },
        { "rule": "max_length", "params": {"length": 200} },
        { "rule": "min_length", "params": {"length": 5} }
      ]
    }
  }
}